{
  "server": {
    "hostname": "knot-resolver-manager",
    "instances": 2,
    "use_cache_gc": false
  },
  "network": {
    "interfaces": [
      {
        "listen": "127.0.0.1"
      },
      {
        "listen": "::1",
        "freebind": true
      },
      {
        "listen": "127.0.0.1",
        "kind": "dot"
      },
      {
        "listen": "::1",
        "kind": "dot",
        "freebind": true
      }
    ],
    "edns_buffer_size": {
      "downstream": "4K"
    }
  },
  "options": {
    "prediction": true
  },
  "dnssec": false,
  "dns64": true,
  "cache": {
    "size_max": "10M"
  },
  "logging": {
    "level": 7
  }
}